<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document Upload</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <style>
      .upload-container {
        max-width: 100%;
        width: 100%;
        padding: 20px;
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
      }

      @media (min-width: 576px) {
        .upload-container {
          max-width: 700px;
        }
      }

      .file-name {
        margin-top: 10px;
        font-style: italic;
        color: #555;
      }

      body {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: #f8f9fa;
        margin: 0;
        padding: 10px;
      }
    </style>
  </head>
  <body class="bg-dark">
    <div class="upload-container bg-light">
      <h2 class="text-center mb-4">Upload Your Documents</h2>
      <form action="/upload" method="POST" enctype="multipart/form-data">
        <!-- File Upload Section -->
        <div class="form-group mb-3">
          <label for="file" class="form-label"></label>
          <input
            type="file"
            class="form-control"
            id="file"
            name="document"
            required
            onchange="handleFileChange()"
          />
          <p id="file-name" class="file-name d-none">No file chosen</p>
        </div>

        <!-- File Name Input -->
        <div class="form-group mb-3">
          <label for="custom-file-name">Change File Name (optional)</label>
          <input
            type="text"
            class="form-control"
            id="custom-file-name"
            name="customFileName"
            placeholder="Enter new file name (without extension)"
          />
        </div>

        <!-- Description Input -->
        <div class="form-group mb-3">
          <label for="description">Description</label>
          <textarea
            class="form-control"
            id="description"
            name="description"
            rows="3"
            placeholder="Enter a description for the file"
          ></textarea>
        </div>

        <!-- Year Input -->
        <div class="form-group mb-3">
          <label for="year">Year</label>
          <select class="form-control" id="year" name="year" required>
            <option value="" disabled selected>Select year</option>
            <option value="First Year">First Year</option>
            <option value="Second Year">Second Year</option>
            <option value="Third Year">Third Year</option>
            <option value="Fourth Year">Fourth Year</option>
          </select>
        </div>

        <!-- Subject Input -->
        <div class="form-group mb-3">
          <label for="subject">Subject</label>
          <input
            type="text"
            class="form-control"
            id="subject"
            name="subject"
            placeholder="Enter the subject"
            required
          />
        </div>

        <!-- Subject Code Input -->
        <div class="form-group mb-3">
          <label for="subject-code">Subject Code</label>
          <input
            type="text"
            class="form-control"
            id="subject-code"
            name="subjectCode"
            placeholder="Enter the subject code"
            required
          />
        </div>

        <!-- For (tutorial, lecture, lab) Input -->
        <div class="form-group mb-3">
          <label for="type">For</label>
          <select class="form-control" id="type" name="type" required>
            <option value="" disabled selected>Select type</option>
            <option value="Tutorial">Tutorial</option>
            <option value="Notes">Notes</option>
            <option value="Lab">Lab</option>
            <option value="PYQ">PYQ</option>
          </select>
        </div>

        <!-- Upload Button -->
        <div class="form-group text-center">
          <button
            type="submit"
            class="btn btn-success btn-block"
            id="upload-btn"
            disabled
          >
            Upload
          </button>
        </div>
      </form>
    </div>

    <script>
      // Function to handle file selection
      function handleFileChange() {
        const fileInput = document.getElementById("file");
        const fileNameDisplay = document.getElementById("file-name");
        const uploadButton = document.getElementById("upload-btn");
        const customFileNameInput = document.getElementById("custom-file-name");

        // Check if a file has been selected
        if (fileInput.files.length > 0) {
          const originalFileName = fileInput.files[0].name
            .split(".")
            .slice(0, -1)
            .join("."); // Extract name without extension
          fileNameDisplay.textContent = `Selected file: ${fileInput.files[0].name}`;
          fileNameDisplay.classList.remove("d-none");
          customFileNameInput.placeholder = `Default: ${originalFileName}`; // Show original file name as placeholder
          uploadButton.disabled = false; // Enable the upload button
        } else {
          // Do nothing if no new file is chosen, retain previous file name and status
        }
      }

      // Attach the event listener to the file input
      document
        .getElementById("file")
        .addEventListener("change", handleFileChange);
    </script>
  </body>
</html>
